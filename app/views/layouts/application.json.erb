{
  "status": <%= response.status %>

  <% if @message %>,"message": <%= @message.to_json.html_safe %><% end %>

  <% if @error %>,"error": <%= @error.to_json.html_safe %><% end %>

  <% if (!@message && !@error) || yield.length > 2 %>,"length": <%= yield.length %><% end %>
  <% if (!@message && !@error) || yield.length > 2 %>,"data": <%= yield %><% end %>
}
